= form_for @date_list do |f|
  -if @date_list.errors.any?
    #error_explanation
      %h2= "#{pluralize(@date_list.errors.count, "error")} prohibited this date_list from being saved:"
      %ul
        - @date_list.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :day
    = f.date_select :day
  .actions
    = f.submit 'Save'
