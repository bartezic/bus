= form_for @carrier do |f|
  -if @carrier.errors.any?
    #error_explanation
      %h2= "#{pluralize(@carrier.errors.count, "error")} prohibited this carrier from being saved:"
      %ul
        - @carrier.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :city_id
    = f.number_field :city_id
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :telephone
    = f.text_field :telephone
  .field
    = f.label :fax
    = f.text_field :fax
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :web_site
    = f.text_field :web_site
  .actions
    = f.submit 'Save'
