#orderPopup.modal.fade
  .modal-header
    %a.close{data:{dismiss:"modal"}} ×
    - if p[:date_from]
      = "<b>#{City.find(p[:city_from]).name} (#{City.find(p[:city_from]).country.name})</b> - <b>#{City.find(p[:city_to]).name} (#{City.find(p[:city_to]).country.name})</b>".html_safe
  .modal-body
    .row-fluid.book
      .span12
        %ul.thumbnails
          %li.span3.thumbnail
            %p= "Виїзд: <b>#{p[:date_from]}</b>".html_safe
            %p= "Час виїзду: <b id='time_stop'></b>".html_safe
            %p= "Місце: <b id='place_stop'></b>".html_safe
            %p= "Рейс: <b id='trip_number'></b>".html_safe
          %li.span9.thumbnail
  .modal-footer
    %a.btn{data: {dismiss: "modal"}} Close