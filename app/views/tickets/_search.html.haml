- if t.any? 
  %ul.thumbnails
    - t.each do |ticket|
      - if ticket.one_way_price
        %li.span2.thumbnail{ :class => "pagination-centered" }
          %h1= "#{ticket.one_way_price.adult} €"
          %p= "Пільговий #{ticket.one_way_price.child} €"
          %p= "Рейс <b>#{ticket.departures.where(:departure_date_id => DepartureDate.find_by_day_of_life(Date.strptime(p[:date_from], '%d/%m/%Y')).id).first.trip_number}</b>".html_safe
          %p= link_to 'Детальніше', ticket, :remote => true, :class => "btn btn-primary"
          %p= link_to 'Забронювати', ticket, :remote => true, :class => "btn btn-success"
- else
  %p Нажаль нічого не знайдено.

