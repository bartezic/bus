- if t.any? 
  %ul.thumbnails
    - t.each do |ticket|
      - if ticket.one_way_price
        %li.span2.thumbnail{ :class => "pagination-centered" }
          %h1= "#{ticket.one_way_price.adult} €"
          %p= "Пільговий #{ticket.one_way_price.child} €"
          %p= "Рейс <b>#{trip_number(ticket, p[:date_from])}</b>".html_safe
          %p= link_to 'Детальніше', ticket, :remote => true, :class => "btn btn-primary"
          %p= link_to_function "Забронювати", "order(#{ticket.id},'#{trip_number(ticket, p[:date_from])}','#{time_stop(ticket, p[:city_from])}','#{place_stop(ticket, p[:city_from])}')", :class => "btn btn-success"
- else
  %p Нажаль нічого не знайдено.

